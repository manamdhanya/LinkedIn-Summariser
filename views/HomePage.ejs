<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
</head>
<style>
    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    button {
        cursor: pointer;
    }
</style>

<body class="min-h-screen bg-gradient-to-br from-blue-600 via-blue-500 to-indigo-600 flex flex-col">

    <nav class="bg-white border-gray-200">
        <div class="flex items-center justify-between p-4">
            <a href="/HomePage">
                <img class="h-16 w-auto"
                    src="https://pbs.twimg.com/profile_images/1562414089460400130/4mOW-9q3_400x400.jpg"
                    alt="company logo">
            </a>

            <div class="flex items-center space-x-6">

                <div class="relative top-[-1.2rem] left-6">
                    <div class="absolute">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="36" height="36"
                            fill="currentColor" class="px-2" id="search-icon">
                            <path
                                d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6 .1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z" />
                        </svg>
                    </div>
                </div>

                <input type="text" id="search-navbar" placeholder="Search..."
                    class="p-2 ps-8 text-sm  border-2 border-gray-500  rounded bg-gray-100" />

                <a href="/Upload">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="30" height="30"
                        fill="currentColor">
                        <path
                            d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z" />
                    </svg>
                </a>

                <button onclick="displayNotifaction()" class="focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="30" height="30"
                        fill="currentColor">
                        <path
                            d="M224 0c-17.7 0-32 14.3-32 32l0 19.2C119 66 64 130.6 64 208l0 18.8c0 47-17.3 92.4-48.5 127.6l-7.4 8.3c-8.4 9.4-10.4 22.9-5.3 34.4S19.4 416 32 416l384 0c12.6 0 24-7.4 29.2-18.9s3.1-25-5.3-34.4l-7.4-8.3C401.3 319.2 384 273.9 384 226.8l0-18.8c0-77.4-55-142-128-156.8L256 32c0-17.7-14.3-32-32-32zm45.3 493.3c12-12 18.7-28.3 18.7-45.3l-64 0-64 0c0 17 6.7 33.3 18.7 45.3s28.3 18.7 45.3 18.7s33.3-6.7 45.3-18.7z" />
                    </svg>
                </button>

                <button onclick="display()" class="focus:outline-none">
                    <img class="w-12 h-12 rounded-full" src="<%=imageUrl_user%>" alt="User avatar">
                </button>
            </div>
        </div>

        <div id="user-dropdown" class="absolute hidden bg-white right-4 mt-2 w-[14rem] rounded-md shadow-lg z-[1]">
            <div class="px-4 py-3">
                <span class="block text-sm">
                    <%=name_user%>
                </span>
                <span class="block text-sm text-gray-500 truncate">
                    <%=email_user%>
                </span>
            </div>
            <ul class="py-2">
                <li><a href="/profile" class="block px-4 py-2 hover:bg-gray-300">Profile</a></li>
                <li><a href="/login" class="block px-4 py-2 hover:bg-gray-300">Sign out</a></li>
            </ul>
        </div>

        <div id="notification-dropdown" class="absolute hidden bg-white right-4 mt-2 w-48 rounded-md shadow-lg z-[1]">
            <ul class="py-2">
                <li>
                    <p class="block px-4 py-2">Nothing!</p>
                </li>
            </ul>
        </div>
    </nav>
    <main class="max-w-7xl mx-auto px-6 py-10">

        <% for (var i=0; i < result.length; i++) { %>
            <div
                class="bg-white shadow-xl rounded-xl p-6 mb-8 border border-gray-200 transform transition duration-300 hover:scale-[1.03] hover:shadow-2xl">
                <div class="flex items-center gap-6">
                    <img src="<%= result[i].profile_pic_url || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(result[i].summaryDetailed.name || 'Candidate') + '&background=F3F4F6&color=374151&size=128' %>"
                        alt="Candidate Image"
                        class="w-[8rem] h-[8rem] rounded-full object-cover border-2 border-blue-200">
                    <div class="flex-1">
                        <div class="flex items-center justify-between">
                            <div>
                                <h2 class="text-xl font-semibold text-gray-900">
                                    <%= result[i].summaryDetailed.name  %>
                                </h2>
                                <p class="text-sm text-gray-600 mt-1">
                                    <%= result[i].summaryDetailed.occupation  %>
                                </p>
                                <span
                                    class="inline-flex items-center gap-2 mt-2 text-sm font-medium text-white bg-[#0066ff] px-3 py-1 rounded-full shadow-sm">

                                    <span>Position Applied: <%= result[i].position  %></span>
                                </span>

                            </div>
                            <a href="/ViewProfile/<%= result[i].fullName %>" title="View Full Profile">
                                <svg class="w-5 h-5 text-gray-500 hover:text-blue-600"
                                    xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>


                        <% if (result[i].summaryDetailed.skills) { %>
                            <div class="mt-3">
                                <h3 class="text-sm font-medium text-gray-700 mb-1">Skills:</h3>
                                <div class="flex flex-wrap gap-2">
                                    <% Object.entries(result[i].summaryDetailed.skills).forEach(function([skill, value])
                                        { %>

                                        <span class="inline-block bg-[#0066ff] text-white text-sm px-3 py-1
                                        rounded-full shadow-sm">
                                        <%= skill %>
                                        <span class="inline-block bg-white text-[#4d4dff] font-semibold text-sm px-2 py-1
                                        rounded-[8rem] shadow-sm">
                                        <%= value %>
                                        </span>
                                        </span>

                                            <% }) %>

                                </div>
                            </div>
                            <% } else { %>
                                <p class="mt-3 text-sm text-gray-500 italic">No skills provided</p>
                                <% } %>
                    </div>
                </div>
            </div>
            <% } %>
    </main>

</body>

</html>

<script>

    function display() {
        const dropdown = document.getElementById('user-dropdown')
        dropdown.classList.toggle('hidden')
    }

    function displayNotifaction() {
        const dropdown = document.getElementById('notification-dropdown')
        dropdown.classList.toggle('hidden')
    }

    let debounceTimer;
    const searchInput = document.getElementById('search-navbar')

    searchInput.addEventListener('input', function () {
        clearTimeout(debounceTimer)
        setTimeout(() => {
            const input = searchInput.value.trim()
            if (input) {
                const search_value = encodeURIComponent(input)
                window.location.href = `/HomePage/${search_value}`
            }
        }, 1000)
    })
</script>